<%= form_with model: chapter, url: [story, chapter] do |form| %>
  <div>
    <strong>Chapter <%= chapter.number %></strong>
    <br>
    <%= form.label :title %>
    <br>
    <%= form.text_field :title %>
    <% chapter.errors.full_messages_for(:title).each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
  <br>
  <div>
    <%= form.label :body %>
    <br>
    <%= form.text_area :body %>
    <% chapter.errors.full_messages_for(:body).each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>